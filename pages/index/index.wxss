page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
}

.search-wrapper{
  width: 750rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
}

.search-input{
  width: 550rpx;
  height: 70rpx;
  margin: 15rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  color:#444;
}

.search-input-mask{
  width: 690rpx;
  height: 50rpx;
  margin: 5rpx 30rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #cdcdcd;
}

.search-cancel-text{
  display: inline-block;
  width: 130rpx;
  vertical-align: middle;
  text-align: center;
}
.radio-line{
  text-align: center;
}
.radio-group{
  width: 600rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
.radio{
  transform:scale(0.5);
  margin-right: 20rpx;
}
.radioLabel{
  font-size: 30rpx;
  margin-right: 50rpx;
}
.to-more{
  display: inline-block;
  height: 20rpx;
  width: 20rpx;
  margin-left: 10rpx;
}

.placeholder-style{
  text-align: center;
  vertical-align: middle;
}

.tab-wrapper{
  max-width: 750rpx;
  background: #F6F6F6;
  border-top: 3rpx solid #F6F6F6;
  border-bottom: 1rpx solid #F6F6F6;
  position: fixed;
  top: 162rpx;
}

.tab-wrapper-mask{
  max-width: 750rpx;
  background: #F6F6F6;
  border-top: 1rpx solid #F6F6F6;
  border-bottom: 1rpx solid #F6F6F6;
  position: fixed;
  top: 55rpx;
}

.tab-item{
  display: inline-block;
  width: 187.5rpx;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  color: #999;
  padding: 12rpx 0;
}
.tab-item-active{
  color: #323233;
}
.tab-item-line{
  width: 187.5rpx;
  position: absolute;
  left: 0rpx;
  bottom: 1rpx;
  border-bottom: 4rpx solid rgba(11, 145, 223, 0.596);
}

.card{
  width: 750rpx;
  background: #FaFaFa;
  font-size: 28rpx;
  padding-top: 230rpx;
}

.card-mask{
  width: 750rpx;
  background: #fafafa;
  font-size: 28rpx;
  margin-top: 125rpx;
}

.card-wrapper{
  padding: 30rpx;
  background: #fffbe6;
  margin-bottom: 10rpx;
  border:#eee 1rpx solid;
}
.card-author-box{
  text-align: right;
}
.card-author{
  font-size: 28rpx;
  color: #999;
  vertical-align: middle;
  margin-left: 20rpx;
}
.card-title{
  font-size: 32rpx;
  margin: 10rpx 0;
  color: #666;
}
.card-content{
  max-width: 700rpx; 
  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 30rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  /* -webkit-line-clamp:2;  */
  color: #444;
  line-height: 1.6;
  white-space: pre-wrap!important;
  word-wrap: break-word!important;
}

.info-bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  text-align: right;
  line-height: 40rpx;
}

.card-liked{
  display: inline-block;
  margin: auto 20rpx auto 0;
  width: 30rpx;
  height: 30rpx;
}
.num-liked{
  display:flex;
  vertical-align: middle;
  padding: 6rpx;
  font-size: 30rpx;
  color: #999;
}

.clicklike{
  display: flex;
  vertical-align: middle;
  width: 100rpx;
  height: 50rpx;
  padding: 10rpx
}
.item-date{
  margin-top: 10rpx;
  color: #999;
  font-size: 28rpx;
}
