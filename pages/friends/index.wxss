page {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  position: relative;
}

.friends-item-wrapper{
  max-width: 750rpx;
  background: #fff;
  border-bottom: 1rpx #fff solid;
}
.margin-top{
  margin-top: 10rpx;
  border-top: 1rpx #fff solid;
}

.friends-item{
  width: 750rpx;
  height: 128rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.bottom-line{
  border-bottom: 1rpx #cdcdcd solid;
}
.friends-divide{
  width: 700rpx;
  height: 2rpx;
  background-color: #F6F6F6;
  margin: 0 auto;
}
.headpic{
  display: inline-block;
  line-height: 100rpx;
  height: 100rpx;
  width: 100rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}
.username{
  margin-left: 10rpx;
}
.followed{
  margin-left: 40rpx;
  font-size: 30rpx;
  color: #1E8AE8;
}
.following{
  margin-left: 40rpx;
  font-size: 30rpx;
  color: #1E8AE8;
}
.friends-item-follow{
  width: 750rpx;
  height: 80rpx;
  background: #fff;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.gomore{
  height: 30rpx;
  width: 30rpx;
  margin-left: 15rpx;
  margin-right: 50rpx;
}

.nomore{
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.search-wrapper{
  width: 750rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-input{
  width: 700rpx;
  height: 50rpx;
  margin-top: 5rpx;
  display: inline-block;
  vertical-align: middle;
  background: #F6F6F6;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  color:#444;
}