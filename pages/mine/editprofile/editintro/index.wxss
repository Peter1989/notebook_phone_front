.container{
  width: 100%;
  position: fixed;
  top: 0rpx;
}
.form-item{
  margin: 0 auto;
  border-bottom: 1rpx solid #F6F6F6;
}
.item-title{
  display: inline-block;
  width: 200rpx;
  margin: 20rpx;
  vertical-align: middle;
}
.belong-item-title{
  display: inline-block;
  width: 150rpx;
  margin: 20rpx 50rpx 20rpx 20rpx;
  vertical-align: middle;
}

.title-placeholder{
  font-size: 30rpx;
}
.title-input{
  display: inline-block;
  width: 720rpx;
  margin: 10rpx 15rpx 0rpx 15rpx;
}

.submit-button{
  width: 300rpx;
}

.submit-button-wrapper{
  margin-top: 50rpx;
  text-align: center;
}