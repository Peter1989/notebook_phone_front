.function-item{
  width: 100%;
  height: 90rpx;
  padding-left: 50rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  color: #1E8AE8;
}

.margin-buttom{
  margin-bottom: 60rpx;
}

.friends-divide{
  width: 730rpx;
  height: 2rpx;
  background-color: #F6F6F6;
  margin: 0 0 0 auto;
}

.friends-divide-bottom{
  width: 100%;
  height: 2rpx;
  background-color: #fffbe6;
}

.curr-tips{
  margin-top: 60rpx; 
}

.class-tips{
  display: inline-block;
  font-size: 30rpx;
  color: red;
  margin-left: 20rpx;
}

.picker-view{
  height: 250px;
  background-color: #fffbe6;
}

.tag-line{
  position: float;
  height: 90rpx;
  padding-left: 70rpx;
  display: flex;
  align-items: center;
  color: #444;

  flex-direction: row;
  justify-content: space-between;
}

.delete{
  height: 40rpx;
  width: 40rpx;
  margin-right: 100rpx;
}

.tab-wrapper{
  width: 750rpx;
  background: #F6F6F6;
  border-top: 1rpx solid #F6F6F6;
  border-bottom: 1rpx solid #F6F6F6;
  position:fixed;
  bottom: 0rpx;
}
.tab-item{
  display: inline-block;
  width: 750rpx;
  font-size: 28rpx;
  text-align: center;
  background: #fff;
  color: #999;
  padding: 12rpx 0;
}
.option{
  display: flex;
  align-items: center;
  vertical-align: middle;
}
.option-button{
  margin-left: 20rpx;
  margin-right: 50rpx;
}